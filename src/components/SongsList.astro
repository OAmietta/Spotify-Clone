---
import { type Song } from "@/lib/data";

interface Props {
  songlist: Song[];
}
const { songlist } = Astro.props;
---

<table class="text-left w-[95%] m-auto divide-y divide-gray-500/20">
  <thead>
    <tr class="text-zinc-400 text-sm font-light">
      <th class="px-2 sm:px-4 pb-2">#</th>
      <th class="px-2 sm:px-4 pb-2">Título</th>
      <th class="px-2 sm:px-4 pb-2">Álbum</th>
      <th class="px-2 sm:px-4 pb-2">Duración</th>
    </tr>
  </thead>

  <tbody>
    <tr class="h-4"></tr>
    {
      songlist?.map((song, index) => {
        return (
          <tr class="border-spacing-0 cursor-pointer text-gray-300 text-sm font-light hover:bg-white/10 overflow-hidden transition duration-300">
            <td class="sm:px-4 py-2 w-5">{index + 1}</td>
            <td class="sm:px-4 py-2 flex gap-3">
              <picture class="">
                <img
                  src={song.image}
                  alt={song.title}
                  class="max-w-11 max-h-11 rounded-md"
                />
              </picture>
              <div class="flex flex-col">
                <h3 class="truncate text-white text-sm sm:text-base font-normal">
                  {song.title}
                </h3>
                <h4 class="truncate text-xs">{song.artists.join(", ")}</h4>
              </div>
            </td>
            <td class="px-3 sm:px-4 text-xs sm:text-sm py-2">{song.album}</td>
            <td class="px-3 sm:px-4 sm:py-2">{song.duration}</td>
          </tr>
        );
      })
    }
  </tbody>
</table>
